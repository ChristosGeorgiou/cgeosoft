{{>_start}}
<div class="container">
  <div class="header my-4 pb-2">
    <h1 class="display-4 title-name">Ιστορικό Υπηρεσιών</h1>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>Αγορά</th>
        <th>Περιγραφή</th>
        <th>Τιμή</th>
      </tr>
    </thead>
    {{#each bought}}
    <tr>
      <td class="text-nowrap">{{date}}
        <br>{{end}}</td>
      <td class="m-0">
        {{description}}
        <br>
        <span class="text-muted m-0">{{product}}</span>
      </td>
      <td class="text-right">{{price}}&euro;</td>
    </tr>
    {{/each}}
  </table>


  <div class="card bg-dark border-secondary">
    <div class="card-body">
      <h4 class="border-bottom border-secondary my-2 pb-2">Διαθέσιμες Υπηρεσίες</h4>
      <ul class="list-unstyled">
        {{#each products}}
        <li class="d-flex w-100 justify-content-between mb-2">
          <span>{{product}}</span>
          <strong style="font-size:1.5rem;" class="ml-5">{{price}}&euro;</strong>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>

</div>
{{>_end}}